<h3>配送先編集</h3>

<%= form_with model: @address, url: address_path, method: :patch do |f| %>

<table>
  <tr>
    <td><%= f.label :郵便番号（ハイフンなし） %></td>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <td><%= f.label :住所 %></td>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <td><%= f.label :宛名 %></td>
    <td><%= f.text_field :receiver_name %></td>
    <td><%= f.submit '変更内容を保存', class: 'btn btn-success' %></td>
  </tr>
<% end %>
</table>