<h3>商品新規登録</h3>

<%= form_with model:@item, url: admin_items_path do |f| %>

<table>
  <tr>
    <td><%= f.label :商品画像 %></td>
    <td><%= f.file_field :image, accept: "image/*" %></td>
  </tr>
  <tr>
    <td><%= f.label :商品名 %></td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td><%= f.label :商品説明 %></td>
    <td><%= f.text_area :description %></td>
  </tr>
  <tr>
    <td><%= f.label :ジャンル %></td>
    <td>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :税抜価格 %></td>
    <td><%= f.text_field :price %>円</td>
  </tr>
  <tr>
    <td><%= f.label :販売ステータス %></td>
    <td>
      <%= f.radio_button :status, false %>
      <%= f.label :status, "販売中" %>
      <%= f.radio_button :status, true %>
      <%= f.label :status, "販売停止中" %>
    </td>
  </tr>
</table>


<%= f.submit '新規登録', class: 'btn btn-success' %>

<% end %>